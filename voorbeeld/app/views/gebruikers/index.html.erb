<% @gebruikers.each do |gebruiker| %>
  <tr>
    <td><%= gebruiker.naam %></td>
    <td><%= gebruiker.email %></td>
    <td><%= gebruiker.wachtwoord_hash %></td>
    <td><%= gebruiker.wachtwoord_salt %></td>
    <td><%= link_to 'Show', gebruiker %></td>
    <td><%= link_to 'Edit', edit_gebruiker_path(gebruiker) %></td>
    <td><%= link_to 'Destroy', gebruiker, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

